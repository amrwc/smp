    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "type": "shell",
            "command": "dotnet build src/Smp.Web/",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-migrations",
            "type": "shell",
            "command": "dotnet build src/Smp.Migrations/",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-tests",
            "type": "shell",
            "command": "dotnet build src/Smp.Web.Tests.Unit/",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-migrations",
            "type": "shell",
            "options": {
                "cwd": "src/Smp.Migrations/bin/Debug/netcoreapp3.1"
            },
            "command": "dotnet ./Smp.Migrations.dll",
            "dependsOn": "build-migrations",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-tests-unit",
            "type": "shell",
            "command": "dotnet test src/Smp.Web.Tests.Unit/",
            "dependsOrder": "sequence",
            "dependsOn": [ 
                "build-api",
                "build-tests"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "varcheck",
            "type": "shell",
            "command": "echo ${workspaceFolder}\\src\\Smp.Web"
        }
    ]
}